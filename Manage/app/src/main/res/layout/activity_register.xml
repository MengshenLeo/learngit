<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        >
        <ImageButton
            android:id="@+id/bt_return_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"></TextView>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="姓名" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入你的用户名"
            android:inputType="textPersonName" />
        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="部门" />

        <EditText
            android:id="@+id/et_part"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入你的部门名称"
            android:inputType="textPersonName" />
        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="性别" />

        <EditText
            android:id="@+id/et_sex"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入你的性别" />
        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="人员属性" />

        <EditText
            android:id="@+id/et_shuxing"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入你的性别" />
        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="岗位" />

        <EditText
            android:id="@+id/et_pos"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入你的岗位" />
        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="手机号码" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入你的手机号" />

        <TextView
            android:layout_width="270dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="密码" />
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入的你的密码"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="270dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"

            android:text="确认密码" />

        <EditText
            android:id="@+id/et_pwd2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="再次确认你的密码"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/bt_submit"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="注册" />
    </LinearLayout>
</LinearLayout>
